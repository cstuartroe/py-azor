isEven: BOOL(n: INT) = n % 2 == 0
power: INT(base: INT, exp: INT) = if exp == 0
                                    then 1
                                  else if isEven(exp)
                                    then power(base * base, exp / 2)
                                  else
                                    base * power(base, exp - 1)

main: INT() = power(5, 7)
